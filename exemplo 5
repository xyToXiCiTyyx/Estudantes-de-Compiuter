#include <stdio.h>
#include <stdlib.h>
#include <time.h>

typedef struct Data{
    int ano;
}Data;

int calculaIdade(int anoNascimento, struct Data dataAtual){
    int idade = dataAtual.ano - anoNascimento;
    return idade;
}

int main()
{
    time_t t = time(NULL);
    struct tm tm = *localtime(&t);
    struct Data data = {tm.tm_year+1900};
    
    int anoNascimento;
    printf("Informe em que ano você nasceu:\n");
    scanf("%d",&anoNascimento);
    
    int idade = calculaIdade(anoNascimento, data);
    printf("A idade é: %d\n",idade);

    return 0;
}

